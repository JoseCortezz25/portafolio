---
import { ExternalLink } from "lucide-react";
import { Button } from "./ui/button";
import { Github } from "./Icons";

interface Props {
  id: string;
  name: string;
  description: string;
  technologies: string[];
  images: string[];
  summary: string;
  repo: string;
  page: string;
}

const { name, summary, images, page, repo } = Astro.props;
---

<article
  class="flex flex-col justify-between h-full border border-neutral-200/80"
>
  <!-- Image -->
  <div class="">
    <img
      class="aspect-video object-cover w-full h-full"
      src={images?.[0]}
      alt={`Imagen del projecto ${name}`}
    />
  </div>
  <!-- Content -->
  <div class="flex flex-col gap-1 py-7 px-6">
    <h3 class="text-xl text-black font-display lg:text-2xl font-bold">
      {name}
    </h3>
    <p class="text-lg text-neutral-700">
      {summary}
    </p>

    <div class="flex gap-3 mt-4 flex-col sm:flex-row">
      <a href={page} target="_blank" rel="noopener noreferrer">
        <Button className="text-md font-bold px-5 py-6 w-full sm:w-auto">
          Ver proyecto
          <ExternalLink className="size-9 ml-1" />
        </Button>
      </a>

      <a href={repo} target="_blank" rel="noopener noreferrer">
        <Button
          className="text-md font-bold px-5 py-6 w-full sm:w-auto"
          variant="outline"
        >
          Repositorio
          <Github className="size-9 ml-1" />
        </Button>
      </a>
    </div>
  </div>
</article>
