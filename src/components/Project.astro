---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
}

const { title, description, image, link } = Astro.props;
---

<article class="flex flex-col justify-between h-full">
  <!-- Image -->
  <div class="">
    <img
      class="aspect-video object-cover w-full h-full"
      src={image}
      alt={`Imagen del projecto ${title}`}
    />
  </div>
  <!-- Content -->
  <div class="flex flex-col gap-1 py-6">
    <h3 class="text-xl text-black font-display lg:text-xl font-bold">
      {title}
    </h3>
    <p class="text-lg text-neutral-700">
      {description}
    </p>
  </div>
</article>
